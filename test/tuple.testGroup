#!/usr/bin/env rexx

parse source . . s

group = .TestGroup~new(s)
group~add(.tuple.testGroup)

if group~isAutomatedTest then return group

testResult = group~suite~execute~~print

return testResult

::requires 'ooTest.frm'
::requires 'orxpython.cls'

/*
    See:
    https://docs.python.org/3/library/stdtypes.html#tuples
    https://docs.python.org/3/tutorial/datastructures.html#tuples-and-sequences
*/
::class tuple.testGroup public subclass ooTestCase
    ::method test_newEmptyTuple
        tuple = .Python~tuple
        actual = .Python~len(tuple)
        self~assertSame(0, unbox(actual))

    ::method test_newNonEmptyTuple_fromIterable
        tuple = .Python~tuple(.Python['a', 'b', 'c'])
        actual = .Python~len(tuple)
        self~assertSame(3, unbox(actual))

    ::method test_indexing_get
        tuple = .Python~tuple(.Python['a', 'b', 'c'])

        index = .Python~int(1)
        actual = tuple[index]

        self~assertSame('b', unbox(actual))
